= link_to 'Портфолио', portfolio_index_path(:anchor => 'second_menu'), :class => 'parent_article'
%h1= @portfolio.name
#portfolio_items
  - @portfolio.portfolio_items.each do |item|
    = link_to image_tag(item.portfolio_item_image.url(:thumb), :alt => item.title), item.portfolio_item_image.url(:medium), :title => item.title, :rel => 'portfolio'
.clear
