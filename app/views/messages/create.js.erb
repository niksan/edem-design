<% if @success %>
  $('#submit_message .btn.btn-success').parent().closest('form').find('input[type=text], textarea').val('')
  $('body').gritterNotice('Уведомление', 'Ваше сообщение успешно отправлено!');
<% else%>
  $('body').gritterNotice('Ошибка', 'Неверно заполнены поля формы.', '/images/gritter/error.png');
<% end %>
